order += "wireless wlp13s0"
order += "tztime date"
order += "tztime local"
order += "tztime japan"
order += "cpu_temperature 0"
order += "disk /"
order += "memory"
order += "read_file uptime"
order += "ethernet eth0"
order += "battery 0"

battery 0 {
        format = "🔋%status %percentage %remaining"
        format_down = "No bat"
        status_chr = "⚡ CHR"
        status_bat = "BAT"
        status_unk = "? UNK"
        status_full = "F"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}

read_file uptime {
        path = "/proc/uptime"
}

memory {
        format = " 🐏 %free 🥩 %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

cpu_temperature 0 {
        format = "CPU🌡️%degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

disk "/" {
    format = "💾 %avail free"
}

tztime local {
        format = "🏝️%H:%M:%S"
        timezone = "Europe/Lisbon"
}

tztime date {
        format = "🗓️%Y-%m-%d"
}

tztime japan {
        format = "🇯🇵%H:%M:%S"
        timezone = "Japan"
}

wireless wlp13s0 {
        format_up = "📡 (%quality at %essid, %bitrate) %ip"
        format_down = "📡 ☠️  "
}

ethernet eth0 {
        format_up = "Eth: %ip (%speed)"
        format_down = "E: ☠️" "
}
